<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="25dp"
        android:columnCount="2"
        android:rowCount="2" >

        <androidx.cardview.widget.CardView
            android:id="@+id/historical_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ImageView>

            <TextView
                android:textAlignment="center"
                android:text="@string/historical_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/uni_red" >
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/calendar_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageView>

            <TextView
                android:textAlignment="center"
                android:text="@string/calendar_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/uni_red" >
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ImageView>

            <TextView
                android:textAlignment="center"
                android:text="@string/activity_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/uni_red" >
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/charts_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ImageView>

            <TextView
                android:textAlignment="center"
                android:text="@string/charts_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/uni_red" >
            </TextView>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</LinearLayout>