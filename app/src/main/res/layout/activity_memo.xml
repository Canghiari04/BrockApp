<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_new_memo_activity"
        app:navigationIcon="@drawable/baseline_arrow_back_toolbar_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uni_red"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_activity_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_background_grey">
        </Spinner>

        <EditText
            android:id="@+id/edit_text_title"
            android:inputType="text"
            android:autofillHints=""
            android:hint="@string/edit_text_title_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="12dp"
            android:maxLength="50"
            android:textSize="18sp"
            android:backgroundTint="@color/uni_red" />

        <EditText
            android:id="@+id/edit_text_description"
            android:inputType="textMultiLine"
            android:autofillHints=""
            android:hint="@string/edit_text_description_memo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:maxLength="300"
            android:textSize="16sp"
            android:backgroundTint="@color/uni_red" />

        <Button
            android:id="@+id/button_add_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:padding="12dp"
            android:text="@string/button_add_memo"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/uni_red" />
    </LinearLayout>
</LinearLayout>