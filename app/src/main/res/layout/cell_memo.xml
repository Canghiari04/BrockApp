<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/checkbox_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:buttonTint="@color/uni_red" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_memo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Memo Title"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_view_memo_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Memo description goes here. It can be multiline and should provide more details."
                android:textColor="@color/dark_grey"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_view_type_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Memo activity goes here. It can be in one line and a list of possible activities."
                android:textColor="@color/dark_grey"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
