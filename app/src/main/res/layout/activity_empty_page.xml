<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_empty_activity"
        app:navigationIcon="@drawable/baseline_arrow_back_toolbar_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:background="@color/uni_red"/>

    <ImageView
        android:contentDescription="@string/description_empty_icon"
        android:src="@drawable/baseline_directions_run_24"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        app:tint="@color/grey">
    </ImageView>
</LinearLayout>