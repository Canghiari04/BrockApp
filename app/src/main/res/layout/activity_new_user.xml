<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_new_user_activity"
        app:navigationIcon="@drawable/baseline_arrow_back_toolbar_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:background="@color/uni_red"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:id="@+id/layout_static"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="@string/new_user_activity_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/uni_red">

            <Button
                android:id="@+id/button_still"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/uni_red"
                android:padding="25dp"
                android:text="@string/still_button"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/uni_red">

            <Button
                android:id="@+id/button_walk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/uni_red"
                android:padding="25dp"
                android:text="@string/walk_button"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/uni_red">

            <Button
                android:id="@+id/button_vehicle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/uni_red"
                android:padding="25dp"
                android:text="@string/vehicle_button"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>