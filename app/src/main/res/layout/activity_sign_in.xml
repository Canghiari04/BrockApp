<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/grey">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp"
            android:elevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_view_sign_in"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center">
            </TextView>

            <EditText
                android:id="@+id/edit_text_sign_in_username"
                android:inputType="textPersonName"
                android:autofillHints=" "
                android:hint="@string/edit_text_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black"
                android:background="@drawable/border_red" />

            <EditText
                android:id="@+id/edit_text_sign_in_password"
                android:inputType="textPassword"
                android:autofillHints="password"
                android:hint="@string/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black"
                android:background="@drawable/border_red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/text_view_select_type_activity"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_grey">
            </TextView>

            <Spinner
                android:id="@+id/spinner_sign_in_activity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:background="@drawable/border_red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/text_view_select_country"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_grey">
            </TextView>

            <Spinner
                android:id="@+id/spinner_sign_in_country"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:background="@drawable/border_red" />

            <Spinner
                android:id="@+id/spinner_sign_in_city"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:background="@drawable/border_red" />

            <Button
                android:id="@+id/button_sign_in"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="@string/sign_in_button"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/text_view_switch_to_login"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/dark_grey">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>